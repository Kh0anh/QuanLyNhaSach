@startuml
skinparam ActivityBackgroundColor #FFF2CC

|Quản lý|
start
:Truy cập Dashboard Quản trị;
split
    :Quản lý Sách;
    if (Hành động?) then (Thêm mới)
        :Nhập thông tin sách mới;
    elseif (Cập nhật)
        :Sửa thông tin sách;
    elseif (Ngừng kinh doanh)
        :Xóa/ẩn sách khỏi hệ thống;
    endif
split again
    :Quản lý Nhân sự;
    if (Hành động?) then (Tạo tài khoản)
        :Tạo User mới & Phân quyền;
    else (Khóa/Sửa)
        :Cập nhật thông tin nhân viên;
    endif
end split

|Hệ thống|
:Cập nhật CSDL;
:Ghi log hoạt động;
stop
@enduml
