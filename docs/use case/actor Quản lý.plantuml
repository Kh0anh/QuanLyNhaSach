@startuml
left to right direction
actor "Quản lý" as QL

package "Phần hệ Quản trị" {
    usecase "Đăng nhập hệ thống" as UC_Login
    usecase "Đổi mật khẩu" as UC_ChangePwd

    package "Quản lý nhân sự" {
        usecase "Tạo tài khoản nhân viên" as UC_TaoNV
        usecase "Cập nhật/khóa tài khoản" as UC_CapNhatNV
        usecase "Phân quyền vai trò" as UC_PhanQuyen
        usecase "Cấp lại mật khẩu mặc định" as UC_ResetPwd
    }

    package "Quản lý sách" {
        usecase "Thêm sách mới" as UC_ThemSach
        usecase "Cập nhật thông tin/tồn kho" as UC_SuaSach
        usecase "Ngừng kinh doanh/ẩn sách" as UC_NgungKD
    }

    package "Khuyến mãi" {
        usecase "Tạo chương trình giảm giá" as UC_KM_Tao
        usecase "Thiết lập điều kiện áp dụng & thời gian" as UC_KM_DieuKien
    }

    package "Thống kê" {
        usecase "Xem doanh thu" as UC_XemDoanhThu
        usecase "Xem tồn kho cảnh báo" as UC_XemTonKho
    }
}

QL --> UC_Login
QL --> UC_ChangePwd
QL --> UC_TaoNV
QL --> UC_CapNhatNV
QL --> UC_PhanQuyen
QL --> UC_ResetPwd
QL --> UC_ThemSach
QL --> UC_SuaSach
QL --> UC_NgungKD
QL --> UC_KM_Tao
QL --> UC_XemDoanhThu
QL --> UC_XemTonKho

UC_KM_Tao ..> UC_KM_DieuKien : <<include>>
@enduml
