@startuml
left to right direction
actor "Kế toán" as KT

package "Phân hệ Kế toán & Báo cáo" {
    usecase "Đăng nhập hệ thống" as UC_Login
    usecase "Thống kê doanh thu (Ngày/Tháng/Năm)" as UC_DoanhThu
    usecase "Thống kê lợi nhuận" as UC_LoiNhuan
    usecase "Thống kê sách bán chạy" as UC_BanChay
    usecase "Theo dõi tồn kho" as UC_TonKho
    usecase "Ra quyết định nhập hàng" as UC_QuyetDinh
}

KT --> UC_Login
KT --> UC_DoanhThu
KT --> UC_LoiNhuan
KT --> UC_BanChay
KT --> UC_TonKho
KT --> UC_QuyetDinh

UC_QuyetDinh ..> UC_TonKho : <<include>>
UC_QuyetDinh ..> UC_BanChay : <<extend>>
@enduml